{
  "compilerOptions": {
    "target": "es5",
    "module": "es2015",
    "strict": true,
    "noImplicitThis": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noUnusedLocals": true,
    "lib": [ "dom", "es2017" ],
    "rootDir": "./src",
    "outDir": "./dist",
    "declaration": true,
    "declarationDir": "./types",
    "typeRoots": [ "node_modules/@types" ]
  },
  "include": [ "src" ],
  "exclude": [ "node_modules" ]
}
