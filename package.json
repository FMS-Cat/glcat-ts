{
  "name": "@fms-cat/glcat-ts",
  "version": "0.8.0",
  "description": "WebGL wrapper with plenty of hackability",
  "author": "FMS-Cat",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FMS-Cat/glcat-ts"
  },
  "main": "./dist/glcat.js",
  "types": "./types/index.d.ts",
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "preversion": "git-branch-is dev",
    "version": "yarn all",
    "postversion": "git push && git checkout master && git merge dev && git push && git push --tags && git checkout dev",
    "all": "yarn lint && yarn test && yarn clean && yarn build && yarn docs",
    "clean": "rimraf dist docs types",
    "dev": "webpack-dev-server --mode development",
    "build-types": "tsc --emitDeclarationOnly",
    "build-dev": "webpack --mode development",
    "build-prod": "webpack --mode production",
    "build": "yarn build-dev && yarn build-prod && yarn build-types",
    "docs": "typedoc --out docs --mode file --excludeNotExported",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "test": "jest",
    "gh-pages": "node ./utils/gh-pages.js",
    "build-docker-image": "docker build -t fmscat/glcat-ts-circleci ./.circleci && docker push fmscat/glcat-ts-circleci"
  },
  "dependencies": {},
  "devDependencies": {
    "@types/gl": "^4.1.0",
    "@types/jest": "^24.0.23",
    "@types/webgl-ext": "^0.0.30",
    "@types/webpack": "^4.41.0",
    "@types/webpack-dev-server": "^3.9.0",
    "@typescript-eslint/eslint-plugin": "^2.19.0",
    "@typescript-eslint/parser": "^2.19.0",
    "eslint": "^6.8.0",
    "fork-ts-checker-webpack-plugin": "^3.1.1",
    "git-branch-is": "^3.1.0",
    "gl": "^4.4.0",
    "jest": "^24.9.0",
    "rimraf": "^3.0.1",
    "ts-jest": "^24.2.0",
    "ts-loader": "^6.2.1",
    "ts-node": "^8.5.4",
    "typedoc": "^0.16.9",
    "typescript": "^3.7.3",
    "webpack": "^4.41.2",
    "webpack-cli": "^3.3.10",
    "webpack-dev-server": "^3.9.0"
  }
}
