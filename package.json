{
  "name": "@fms-cat/glcat-ts",
  "version": "0.14.0",
  "description": "WebGL wrapper with plenty of hackability",
  "author": "FMS_Cat",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/FMS-Cat/glcat-ts"
  },
  "main": "dist/glcat.js",
  "module": "dist/glcat.module.js",
  "types": "./types/index.d.ts",
  "files": [
    "/dist/",
    "/ts*/",
    "/types/",
    "/LICENSE"
  ],
  "scripts": {
    "dev": "cross-env DEV=1 ESM=1 SERVE=1 rollup -w -c -o dist/glcat.module.js",
    "all": "yarn lint && yarn test && yarn clean && yarn build && yarn docs",
    "clean": "rimraf dist/ docs/ ts*/ types/",
    "test": "jest",
    "lint": "eslint \"src/**/*.{ts,tsx}\"",
    "build": "yarn build-dev && yarn build-prod && yarn build-esm && yarn build-esmprod && yarn build-types",
    "build-dev": "cross-env DEV=1 rollup -c -o dist/glcat.js",
    "build-prod": "rollup -c -o dist/glcat.min.js",
    "build-esm": "cross-env DEV=1 ESM=1 rollup -c -o dist/glcat.module.js",
    "build-esmprod": "cross-env ESM=1 rollup -c -o dist/glcat.module.min.js",
    "build-types": "tsc --declaration --declarationDir ./types --emitDeclarationOnly && downlevel-dts types ts3.4/types",
    "docs": "typedoc --out docs --mode file --excludeNotExported",
    "gh-pages": "node ./utils/gh-pages.js",
    "build-docker-image": "docker build -t fmscat/glcat-ts-circleci:14.4.0 ./.circleci && docker push fmscat/glcat-ts-circleci:14.4.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.0.0",
    "@types/gl": "^4.1.0",
    "@types/jest": "^26.0.17",
    "@types/node": "^14.14.10",
    "@typescript-eslint/eslint-plugin": "^4.9.1",
    "@typescript-eslint/parser": "^4.9.1",
    "cross-env": "^7.0.3",
    "downlevel-dts": "^0.7.0",
    "eslint": "^7.15.0",
    "eslint-plugin-jest": "^24.1.3",
    "gh-pages": "^3.1.0",
    "gl": "^4.9.0",
    "jest": "^26.6.3",
    "rimraf": "^3.0.0",
    "rollup": "^2.34.2",
    "rollup-plugin-banner": "^0.2.1",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2",
    "ts-jest": "^26.4.4",
    "ts-node": "^9.1.1",
    "tslib": "^2.0.3",
    "typedoc": "^0.19.2",
    "typescript": "^4.1.2"
  }
}
